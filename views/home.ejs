<%- include('partials/header') %>

    <div class="post-container">
        <img src="image/BEE.png" alt="bee reading book logo" />
        <h1>Home</h1>
        <p>
            <%= homePageContent %>
        </p>
        <% posts.map(post=> { %>
            <h2>
                <%= post.title %>
            </h2>
            <p>
                <%= `${post.post.slice(0,100)}...` %>
                    <a href="/posts/<%= post.title %>">Read More</a>
            </p>
            <% }) %>
    </div>


